<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaf1fe">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/maincolor"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="隐患整改"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_ok"
        android:layout_below="@+id/rl_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_top1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_top1"
                    android:drawablePadding="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="隐患基本信息"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/tv_top1"
                    android:background="@color/line" />

                <TextView
                    android:id="@+id/tv_hidden_info_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_hidden_info"
                    android:layout_marginStart="20dp"
                    android:text="隐患描述"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_hidden_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_line1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/tv_hidden_info_label"
                    android:gravity="end"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp"
                    tools:text="隐患名称隐患名称隐患名称隐患名称隐患名称隐患名称" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_level"
                    android:layout_marginStart="20dp"
                    android:text="隐患等级"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_hidden_info"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp"
                    tools:text="一般风险" />

                <TextView
                    android:id="@+id/tv_risk_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_risk_name"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="风险点名称"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_risk_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_level"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/tv_risk_name_label"
                    android:gravity="end"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp"
                    tools:text="道路道路道路道路道路道路道路道路道路道路" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_risk_id"
                    android:layout_marginStart="20dp"
                    android:text="风险点编号"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_risk_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_risk_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp"
                    tools:text="1-1-1" />

                <TextView
                    android:id="@id/tv_method_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_method"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="治理方法"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_risk_id"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toEndOf="@+id/tv_method_label"
                    android:gravity="end"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp"
                    tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_top2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_top2"
                    android:drawablePadding="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="不合格原因"
                    android:textColor="@color/maintextcolor" />

                <View
                    android:id="@+id/view_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/tv_top2"
                    android:background="@color/line" />

                <TextView
                    android:id="@+id/tv_recheck_result_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_recheck_result"
                    android:layout_marginStart="20dp"
                    android:text="复查结果"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_recheck_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_line2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/tv_recheck_result_label"
                    android:gravity="end"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp"
                    tools:text="原因" />

                <TextView
                    android:id="@+id/tv_recheck_proposal_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_recheck_proposal"
                    android:layout_marginStart="20dp"
                    android:text="复查建议"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_recheck_proposal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_recheck_result"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/tv_recheck_proposal_label"
                    android:gravity="end"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp"
                    tools:text="复查建议" />

                <TextView
                    android:id="@+id/tv_recheck_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_recheck_time"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="复查时间"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_recheck_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_recheck_proposal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toEndOf="@+id/tv_recheck_time_label"
                    android:gravity="end"
                    android:textColor="@color/maintextcolor"
                    android:textSize="14sp"
                    tools:text="2020" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_top3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_top3"
                    android:drawablePadding="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="内容填写"
                    android:textColor="@color/maintextcolor" />

                <View
                    android:id="@+id/view_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_state_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="整改状态"
                        android:textColor="@color/maintextcolor" />

                    <EditText
                        android:id="@+id/et_modify_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/tv_state_label"
                        android:background="@null"
                        android:hint="请输入整改状态"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/et_modify_state"
                        android:layout_alignStart="@+id/et_modify_state"
                        android:layout_marginEnd="20dp"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_info_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="整改情况"
                        android:textColor="@color/maintextcolor" />

                    <EditText
                        android:id="@+id/et_modify_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/tv_info_label"
                        android:background="@null"
                        android:hint="请输入整改情况"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/et_modify_info"
                        android:layout_alignStart="@+id/et_modify_info"
                        android:layout_marginEnd="20dp"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_result_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="整改结果"
                        android:textColor="@color/maintextcolor" />

                    <EditText
                        android:id="@+id/et_modify_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/tv_result_label"
                        android:background="@null"
                        android:visibility="gone"
                        android:hint="请输入整改结果"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_choose_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:drawableEnd="@drawable/ic_more"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:layout_alignTop="@+id/tv_result_label"
                        android:layout_alignBottom="@+id/tv_result_label"
                        android:text="请选择"
                        android:textColor="@color/maintextcolor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/tv_choose_result"
                        android:layout_alignStart="@+id/tv_result_label"
                        android:layout_marginEnd="20dp"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="整改照片"
                        android:textColor="@color/maintextcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_image_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:padding="10dp"
                        android:text="上传"
                        android:textColor="@color/maincolor"
                        android:textSize="14sp" />
                </RelativeLayout>

                <com.winto.develop.ShenBao.wight.CustomGridView
                    android:id="@+id/gv_image_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="5dp"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp" />

                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:text="提示：长按图片可删除"
                    android:textColor="@color/secondtextcolor"
                    android:textSize="12sp"
                    android:visibility="gone" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="整改流程"
                    android:textColor="@color/maintextcolor"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_solid_corner_gray_5dp"
                    android:gravity="start"
                    android:hint="请填写整改流程"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_btn_clickable_blue"
        android:text="提交"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />
</RelativeLayout>