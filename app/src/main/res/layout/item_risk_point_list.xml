<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/tv_scan"
        android:textColor="@color/maintextcolor"
        android:textSize="14sp"
        tools:text="风险点名称风险点名称风险点名称风险点名称风险点名称" />

    <TextView
        android:id="@+id/tv_risk_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/tv_scan"
        android:text="风险点编号：1/1/1-1"
        android:textColor="@color/secondtextcolor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_risk_id"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="未完成"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_complate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_pending"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:drawableStart="@drawable/ic_scan_blue"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="扫码"
        android:textColor="#03B9F5"
        android:textSize="14sp" />
</RelativeLayout>